<html metal:use-macro="get_template('templates/main_template.pt')">
    <title metal:fill-slot="title">Letter box</title>
    
    <body metal:fill-slot="body">

            <div class="row">
                <div class="col-md-8">
                    <h1>Box number ${context.id}</h1>
                    <p>A PB${context.type} letter box in ${context.town}.</p>
                </div>
                <div class="col-md-4">
                    <img tal:condition="coords" src="//maps.googleapis.com/maps/api/staticmap?center=${coords[0]},${coords[1]}&amp;zoom=16&amp;size=400x400&amp;markers=color:red%7C${coords[0]},${coords[1]}&amp;sensor=false" />
                    <kbd>${context.gridref}</kbd> (${context.location})
                </div>
            </div>
    </body>
</html>
